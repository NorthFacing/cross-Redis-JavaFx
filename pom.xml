<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.adolphor</groupId>
  <artifactId>crossRedis</artifactId>
  <version>0.1</version>
  <packaging>jar</packaging>

  <developers>
    <developer>
      <name>BobZhu</name>
      <email>0haizhu0@gmail.com</email>
    </developer>
  </developers>

  <properties>
    <project.Encoding>UTF-8</project.Encoding>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.release>9</maven.compiler.release>
    <maven.compiler.source>1.9</maven.compiler.source>
    <maven.compiler.target>1.9</maven.compiler.target>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.jfoenix</groupId>
      <artifactId>jfoenix</artifactId>
      <scope>system</scope>
      <version>9.0.0</version>
      <systemPath>${basedir}/lib/jfoenix-9.0.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.controlsfx</groupId>
      <artifactId>controlsfx</artifactId>
      <version>8.40.14</version>
    </dependency>
    <!--<dependency>-->
      <!--<groupId>de.jensd</groupId>-->
      <!--<artifactId>fontawesomefx-fontawesome</artifactId>-->
      <!--<version>4.7.0-9.1.2</version>-->
    <!--</dependency>-->
    <!--<dependency>-->
      <!--<groupId>io.datafx</groupId>-->
      <!--<artifactId>datafx</artifactId>-->
      <!--<version>8.0.7</version>-->
    <!--</dependency>-->
    <!--<dependency>-->
      <!--<groupId>io.datafx</groupId>-->
      <!--<artifactId>flow</artifactId>-->
      <!--<version>8.0.7</version>-->
    <!--</dependency>-->
  </dependencies>

  <build>
    <directory>target</directory>
    <finalName>${project.name}</finalName>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <source>9</source>
          <target>9</target>
          <showWarnings>true</showWarnings>
          <showDeprecation>true</showDeprecation>
        </configuration>
      </plugin>

      <plugin>
        <groupId>com.zenjava</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>8.8.3</version>
        <configuration>
          <mainClass>com.bob.CrossRedis</mainClass>
          <vendor>${project.artifactId}</vendor>

         <identifier>${project.groupId}.${project.artifactId}</identifier>

          <jvmArgs>
            <argument>-Xmx512m</argument>
          </jvmArgs>
          <jvmProperties>
            <java.liberary.path>.</java.liberary.path>
          </jvmProperties>

          <bundleArguments>
            <runtime /> <!-- dont include JRE, use installed one -->
          </bundleArguments>

          <nativeReleaseVersion>${project.version}</nativeReleaseVersion>
          <verbose>true</verbose>

          <keyStoreAlias>example-user</keyStoreAlias>
          <keyStorePassword>example-password</keyStorePassword>
          <allPermissions>true</allPermissions>

        </configuration>

      </plugin>


    </plugins>
  </build>
</project>